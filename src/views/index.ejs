<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Guestbook</title>
</head>
<header>
    <h1>Guestbook <span>by Satanshitt</span></h1>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/new">New</a></li>
            <li><a href="https://github.com/satanshitt">GitHub</a></li>
        </ul>
    </nav>
</header>
<body>

    <%if (entries.length) { %>

        <section class="index-control">
        <div class="index">
            <% entries.forEach(function (entry) {%>
                <div class="card">
                    <p><%= entry.published %></p>
                </div>
                <div class="card-body">
                    <h2>Title: <%= entry.title %></h2>
                    <h2>Content: <%= entry.content %></h2>
                </div>
                <% }) %>
        </div>
        <% } else {%>
            <p>No entries! <a href="/new">Add one xd</a></p>
            <% } %>
        </section>

</body>
</html>